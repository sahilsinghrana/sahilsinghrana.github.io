---
import { Image } from "astro:assets";
import Layout from "@layouts/index.astro";
import chaseMoon from "@images/chase.gif";
import { Breadcrumbs } from "astro-breadcrumbs";

import "@layouts/blogPost.scss";
---

<script type="application/ld+json">
  {
    "@context": "https://schema.org/",
    "@type": "BlogPosting",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://sahilsinghrana.github.io/blog/whyMoon"
    },
    "headline": "Why Moon?",
    "description": "Moon is so inspiring. Isn't it?",
    "image": {
      "@type": "ImageObject",
      "url": "https://sahilsinghrana.github.io/_astro/chase.CE8UovXo_25YWBc.webp",
      "width": "699",
      "height": "200"
    },
    "author": {
      "@type": "Person",
      "name": "Sahil Rana"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Sahil Singh Rana",
      "logo": {
        "@type": "ImageObject",
        "url": "https://sahilsinghrana.github.io/_astro/logo.Bj3URTd-_ZFTgCk.webp",
        "width": "20",
        "height": "20"
      }
    },
    "datePublished": "2024-05-29",
    "dateModified": "2024-05-29"
  }
</script>

<Layout
  title={"Why Moon?"}
  description={"Why moon everywhere?"}
  keywords={["Moon", "Why", "Why Moon", "Sahil", "Singh", "Rana"]}
>
  <div class="blogPostHeading">
    <div class="bg">
      <Image src={chaseMoon} alt="my moon" />
      <div class="head">
        <h2><em>{"Why Moon?"}</em></h2>
        <Breadcrumbs
          linkTextFormat="capitalized"
          mainBemClass="blog-breadcrumbs"
        />
      </div>
    </div>
  </div>
  <article
    class="blogContent"
    style="width: 100%; text-align: center; margin-top : 50px; margin-bottom : 50px;"
  >
    <div style="margin-bottom: 30px; text-align:center;">
      <p style="font-weight: 200; opacity : 0.7; font-size: 0.7rem;">
        description
      </p>
    </div>

    <q
      style="text-align: center; color : lightgray; font-weight: 600;font-style: italic; font-size: 0.9rem;"
    >
    </q>
    <p style="color : gray; font-size: 0.8rem; padding-left : 2rem;">
      footnote
    </p>
  </article>
</Layout>
