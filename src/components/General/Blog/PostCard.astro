---
const { title, description, image, pubDate, author } = Astro.props;
---

<style>
  .blogPostCard {
    width: 250px;
    height: 200px;
    overflow: hidden;

    outline: 1px solid gray;
    border-radius: 20px;

    img {
      width: 100%;
      height: 40%;
      object-fit: cover;
      background: darkgray;
    }

    .content {
      padding: 5px;
      width: 100%;
    }
    h3 {
      font-size: 1rem;
      margin: 0;
      text-wrap: wrap;
    }

    .description {
      font-size: 0.7rem;
      color: lightgray;
      font-style: italic;
      margin: 0;
      margin-top: 5px;
    }
    .meta {
      span {
        font-size: 0.8rem;
      }
    }
  }
</style>

<h3 class="blogPostCard">
  <img src={image.url} alt={image.alt} />
  <div class="content">
    <h3>{title}</h3>
    <p class="description">{description}</p>
    <!-- <div class="meta">
      <>
        <span>{pubDate}</span>
        <span>{author}</span>
      </>
    </div> -->
  </div>
</h3>
