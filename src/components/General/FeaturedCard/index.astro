---
import { Image } from "astro:assets";

import "./index.scss";

const { title, description, image, slug } = Astro.props;
---

<a href={slug} class="featuredPostCard">
  <Image
    src={image?.src ? image : image?.url}
    alt={image?.alt || title}
    width={200}
    height={200}
    quality={"high"}
  />
  <div class="content">
    <h3 class="title" id={slug}>{title}</h3>
    <p class="description">{description}</p>
    <!-- {
      pubDate && (
        <div class="meta">
          <span>{formatDate(pubDate)}</span>
        </div>
      )
    } -->
  </div>
</a>
