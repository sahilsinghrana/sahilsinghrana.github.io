---
import placeholder from "@images/placeholder2.webp";

const { Image, title, quote } = Astro.props;

const placeHolderImagee = Image || placeholder;

---

<style>
  .sectionHeaderImageWrapper {
    width: 100%;
    height: 22vw;
    max-height: 210px;
    position: relative;
    border-radius: 0px 0px 20px 20px;
    overflow: hidden;
  }
  .sectionHeaderImage {
    height: 100%;
    width: 100%;
    object-fit: cover;

    /* opacity: 0.4; */

    filter: grayscale(0.5) blur(0.3px) brightness(1);
  }

  .titleWrapper {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;

    background-color: rgba(17, 25, 40, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.125);
    text-align: center;
    q {
      margin-top: 10px;
      padding: 0;
      font-size: 0.7rem;
      font-style: italic;
      color: rgba(206, 206, 206, 0.727);
    }
    .headerImageTitle {
      margin: 0;
      font-weight: bold;
      font-size: 1.3rem;
      letter-spacing: 4px;
      text-shadow: 4px 4px 2px rgba(0, 0, 0, 0.6);
    }
  }
</style>

<div class="sectionHeaderImageWrapper">
  <img src={placeHolderImagee.src} class="sectionHeaderImage" />

  <div class="titleWrapper">
    <h1 class="headerImageTitle">{title}</h1>
    <q>{quote}</q>
  </div>
</div>
