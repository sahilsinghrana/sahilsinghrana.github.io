---
import RubiksCube from "@images/rubikscube.webp";
const { title, content, image, links } = Astro.props;

import "./index.scss";

const displayImage = image?.src || RubiksCube.src;
---

<div class="projectCard">
  <img class="projectCardImg" src={displayImage} alt={title} />
  <div class="content">
    <h5>{title}</h5>
    <p>{content}</p>
  </div>
  <ul class="links">
    {
      links.map(({ Icon, link }) => {
        if (!Icon) return null;
        return (
          <li>
            <a href={link}>
              <Icon />
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
