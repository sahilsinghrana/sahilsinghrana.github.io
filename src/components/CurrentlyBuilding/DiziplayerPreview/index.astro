---
import Image from "astro/components/Image.astro";
import DiziPlayerPreview from "@assets/images/DiziPlayerPreview.webp";

import { diziPlayerMeta } from "@utils/projects";

import "./index.scss";
---

<div class="diziplayerPreviewWrapper previewWrapper">
  <div class="details">
    <div class="info">
      <h2 class="diziTitle">DiZi {"  "}<span>PLAYER</span></h2>
      <p>
        A music player that turns your cloud storage into a personal streaming
        service. It organizes and manages your tunes, so you can enjoy your
        music anytime, anywhere!
      </p>
    </div>
    <Image
      src={DiziPlayerPreview}
      alt={"dizi player preview"}
      class="previewImage"
      width={300}
      height={300}
    />
  </div>
  <div class="footer">
    <p class="status"><span>Under Development</span></p>
    <ul class="links">
      {
        diziPlayerMeta.links.map((link) => {
          const { Icon, link: url, description } = link;
          return (
            <li>
              <a aria-label={description} href={url} target="_blank">
                <Icon />
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</div>
