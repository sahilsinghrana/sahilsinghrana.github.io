---
import NowPlaying from "./NowPlaying.astro";
import TopArtists from "./TopArtists.astro";
import "./spotify.scss";
---

<script>
  const spotifyLogoAnchorEl = document.querySelector(
    "body > main > div > div.spotifyData > div > a.spotifyLogoContainer",
  );

  fetch("https://mytopsongs.sahilsinghrana.workers.dev/")
    .then((res) => res.json())
    .then((res) => {
      const { myProfile } = res;
      spotifyLogoAnchorEl.href = myProfile?.external_urls?.spotify;
    })
    .catch((err) => {
      console.log(err);
    });
</script>

<div class="spotifyData">
  <NowPlaying />
</div>
