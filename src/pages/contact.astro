---
import SectionHeaderImage from "@components/General/Image/SectionHeaderImage.astro";
import Layout from "../layouts/index.astro";
import placeholderImage from "@images/placeholder5comp.webp";

import BusinessCard from "@components/General/BusinessCard/index.astro";
import { links } from "@utils/constants";
import { Github, Instagram, Linkedin, Twitter } from "lucide-astro";

import "@assets/styles/contact.scss";
import { contactPageKeyWords } from "@utils/metaKeywords";
import moonFacts from "@utils/moonFacts";
---

<Layout
  title="Contact | Sahil Singh Rana | Software Developer | Sahil Rana"
  description="Wanna talk? Let's connect. Reach out to me through this Contact page."
