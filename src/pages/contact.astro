    title="Contact"
    Image={placeholderImage}
    quote={moonFacts.drifting.fact}
  />

  <div class="contactCardWrapper">
    <BusinessCard />
  </div>
  <div class="contactMe">
    <p class="mail">
      Feel free to get in touch with me via email at <a
        href="mailto:ranasahil98@gmail.com">ranasahil98@gmail.com</a
      >
    </p>

    <div>
      <p>Alternatively, you can connect with me on:</p>
      <ul>
        <small>
          <li>
            <Linkedin /> Linkedin : <a target="_blank" href={links.linkedin}
              >@sahilsinghrana</a
            >
          </li>
          <li>
            <Twitter /> X : <a target="_blank" href={links.twitter}
              >@sahilrana010</a
            >
          </li>
          <li>
            <Github /> Github : <a target="_blank" href={links.github}
              >@sahilsinghrana</a
            >
          </li>
          <li>
            <Instagram /> Instagram : <a target="_blank" href={links.instagram}
              >@sahilrana0_0</a
            >
          </li>
        </small>
      </ul>
    </div>
  </div>
  <div class="moonFact">
    {moonFacts.farSideTerrain.fact}
  </div>
</Layout>
