{
  "extends": "astro/tsconfigs/base",
  "lib": ["ESNext", "DOM", "DOM.Iterable"],
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"]
    }
  },
  "include": [
    "src",
    "src/components/Spotify/nowPlaying.js",
    "src/components/Spotify/spotifyTracksAndArtistsfiller.js"
  ]
}
