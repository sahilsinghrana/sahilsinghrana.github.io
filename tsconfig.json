{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    // Solid specific settings
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"]
    }
  }
}
